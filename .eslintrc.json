{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
	"comma-dangle": 0,
	"linebreak-style": 0,
	"prefer-destructuring": 0,
	"no-plusplus": 0,
	"import/newline-after-import": 0,
	"arrow-body-style": "off",
	"arrow-parens": 0,
    "no-await-in-loop": 0,
    "class-methods-use-this": 0
    }
}
